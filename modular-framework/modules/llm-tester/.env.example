# LLM Tester Module .env example

# REQUIRED: Full base to reach your edge from inside the container or host
EDGE_BASE=http://edge-nginx

# OPTIONAL: If your LLM Gateway needs a token and you want to default-inject it
GATEWAY_KEY=

# Logging (optional: Splunk HEC)
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
SPLUNK_SOURCE=llm-tester
LOG_TO_CONSOLE=false

# Data directory (mounted or local)
DATA_DIR=/app/data

# Service port (do not change unless you alter edge mapping)
PORT=3040

# TLS relax for dev (edge dev cert)
NODE_TLS_REJECT_UNAUTHORIZED=0
